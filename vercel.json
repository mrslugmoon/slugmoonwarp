{
  "version": 2,
  "builds": [
    {
      "src": "package.json", // This build is for the entire project, running 'npm run build'
      "use": "@vercel/node"
      // No need for "config": { "includeFiles": ["dist/**"] } here, as the routes will handle the `dist` output.
    },
    {
      "src": "client/index.html", // <-- Changed this to point to the *source* index.html
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/index.html"
    }
  ],
  "buildCommand": "npm run build"
}
